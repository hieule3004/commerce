{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "incremental": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "swc": true,
    "require": [
      "tsconfig-paths/register",
      "dotenv/config"
    ]
  }
}