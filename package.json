{
  "name": "commerce",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc --project tsconfig.json",
    "prestart": "until [ -f ./dist/*.tsbuildinfo ]; do sleep 0.1; done",
    "start": "ENV_PATH=${ENV_PATH:-etc/env/.env.local} node -r @swc-node/register -r ./dist/etc/scripts/tsconfig-paths.js ./dist/src/server.js",
    "start:dev": "concurrently -k -p none yarn:watch:*",
    "watch:build": "yarn build -w >/dev/null",
    "watch:node": "nodemon -w package.json -w tsconfig.json -w dist/src -w ${ENV_PATH:-etc/env/.env.local} -V -x yarn start",
    "test:unit": "ENV_PATH=${ENV_PATH:-etc/env/.env.local} jest --config test/setup/jest-unit.config.ts",
    "test:e2e": "ENV_PATH=${ENV_PATH:-etc/env/.env.local} jest --config test/setup/jest-e2e.config.ts"
  },
  "prettier": {
    "importOrder": [
      "^node:(.*)$",
      "<THIRD_PARTY_MODULES>",
      "^@src/(.*)$",
      "^[./]"
    ],
    "importOrderParserPlugins": [
      "typescript",
      "classProperties",
      "decorators-legacy"
    ],
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": true
    },
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended-type-checked",
      "plugin:import/warnings",
      "prettier"
    ]
  },
  "dependencies": {
    "chance": "^1.1.11",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.1",
    "convert": "^5.0.0",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.1.0",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-idempotency": "^1.0.5",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "mathjs": "^12.3.2",
    "method-override": "^3.0.0",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "sequelize": "^6.37.1",
    "ulidx": "^2.3.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4",
    "zod-express-middleware": "^1.4.0"
  },
  "devDependencies": {
    "@swc-node/register": "^1.8.0",
    "@swc/core": "^1.4.2",
    "@swc/helpers": "^0.5.6",
    "@swc/jest": "^0.2.36",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/chance": "^1.1.6",
    "@types/compression": "^1.7.5",
    "@types/content-type": "^1.1.8",
    "@types/cookie-parser": "^1.4.6",
    "@types/cookie-session": "^2.0.48",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/inflection": "^1.13.2",
    "@types/jest": "^29.5.12",
    "@types/method-override": "^0.0.35",
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.0",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "regenerator-runtime": "^0.14.1",
    "supertest": "^6.3.4",
    "testcontainers": "^10.7.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "resolutions": {
    "inflection": "*",
    "semver": "*",
    "**/@swc/types": ">=0.1"
  }
}
